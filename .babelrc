{
  "ignore": [
    "node_modules"
  ],
  "presets": [
    "react",
    "stage-0",
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      }
    }]
  ],
  "plugins": [
    "babel-plugin-styled-components",
    "transform-decorators",
    ["transform-class-properties", { "spec": true }],
    ["transform-react-remove-prop-types",{"mode": "wrap"}]
  ],
  "env": {
    "dev": {
      "presets": [
        "env",
        "stage-0",
        "react-hmre"
      ]
    },
    "development": {
      "presets": [
        "es2015"
      ]
    },

    "distMin": {
      "presets": [
        "es2015"
      ]
    },
    "ghPages": {
      "presets": [
        "es2015"
      ]
    },
    "modules": {
      "presets": [
        [
          "env",
          {
            "modules": "umd"
          }
        ]
      ]
    },
    "es6": {
      "presets": [
        [
          "env",
          {
            "modules": false
          }
        ]
      ]
    }
  }
}
